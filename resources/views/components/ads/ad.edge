{{--  Ad Display Component  --}}

<div class="ad">
	<a href="/ads/{{ ad.id }}">
		<img src="{{ ad.thumbnail }}" alt="">
	</a>	
	<div class="content">
		<div class="header">
			<img height="32" width="32" src="{{ ad.platform.icon }}" class="platform" />
			<h3 class="title"><a href="/ads/{{ ad.id }}">{{ ad.title }}</a></h3>
		</div>
		@if(ad.category_id == 1)
			<span class="genres">
			@each(genre in ad.product.genres)
				<span class="genre">{{ genre }}</span>
			@endeach
			</span>
		@elseif(ad.category_id == 2)
			<span>{{ ad.product.gameAmount }} Games</span>
		@endif
		<span class="date">{{ ad.date }}</span>
		<span class="price">{{ ad.price }}â‚¬</span>
		@if(ad.category.name == 'Game')
			<i data-feather="key" class="icon"></i>
			<i data-feather="key" class="icon1"></i>
			<i data-feather="key" class="icon2"></i>
		@endif
		@if(ad.category.name == 'Account')
			<i data-feather="user" class="icon"></i>
		@endif
		<a class="link" href="/ads/{{ ad.id }}">
			<i data-feather="arrow-right"></i>
		</a>
	</div>
	@if(ad.user_id == user.id)
		<ul class="user-controls">
			<li><a href="{{ route('AdController.delete', { id: ad.id }) }}"><i data-feather="trash"></i></a></li>
			<li><a href="{{ route('AdController.edit', { id: ad.id }) }}"><i data-feather="edit"></i></a></li>
		</ul>
	@endif
</div>


