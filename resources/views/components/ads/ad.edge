			<span class="genre">{{ genre }}</span>
		@endeach
		</span>
		<span class="date">{{ ad.date }}</span>
		<span class="price">{{ ad.price }}â‚¬</span>
		@if(ad.category.name == 'Game')
			<i data-feather="key" class="icon"></i>
			<i data-feather="key" class="icon1"></i>
